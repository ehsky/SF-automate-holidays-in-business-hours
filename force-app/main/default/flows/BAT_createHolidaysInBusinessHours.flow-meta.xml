        <description>Get the orgs active business hour record</description>
        <name>GET_ActiveOrganizationBusinessHours</name>
        <label>GET Active Organization Business Hours</label>
        <locationX>380</locationX>
        <locationY>276</locationY>
        <assignNullValuesIfNoRecordsFound
    >false</assignNullValuesIfNoRecordsFound>
